@using CitelSoftwareApplication.Web.Services.Interface;
@model ProdutoViewModel
@inject ICategoriaService _categoriaService
@{
    ViewData["Title"] = "Produtos";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Produto" asp-action="ProdutoIndex">@ViewData["Title"]</a></li>
                    <li class="breadcrumb-item active">Edição</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-warning">
            @ViewData["ErrorMessage"]
        </div>
    }
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <form method="post">
                        <input asp-for="Id" type="hidden" />
                        <div class="card-body">
                            <div class="row pb-4">
                                <div class="col-12 ">
                                    <label asp-for="Nome">Nome</label>
                                    <input asp-for="Nome" type="text" class="form-control" />
                                    <span asp-validation-for="Nome" class="text-danger " />
                                </div>
                            </div>
                            <div class="row pb-4">
                                <div class="col-12">
                                    <label asp-for="Descricao">Descrição</label>
                                    <input asp-for="Descricao" type="text" class="form-control" />
                                    <span asp-validation-for="Descricao" class="text-danger " />
                                </div>
                            </div>
                            <div class="row pb-4">
                                <div class="col-12">
                                    <label asp-for="Preco">Preço</label>
                                    <input asp-for="Preco" class="form-control" />
                                    <span asp-validation-for="Preco" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row pb-4">
                                <div class="col-12">
                                    <label asp-for="CategoriaId">Categoria</label>
                                    <select asp-for="CategoriaId" class="form-control" asp-items="@(await _categoriaService.GetOpcaoCategorias())">
                                        <option value="">Selecione uma categoria</option>
                                    </select>
                                    <span asp-validation-for="CategoriaId" class="text-danger " />
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-12 col-md-3">
                                    <a class="btn btn-primary form-control" asp-action="ProdutoIndex"><i class="fas fa-list"></i> Voltar</a>
                                </div>
                                <div class="col-12 col-md-3 offset-md-6">
                                    <input type="submit" value="Salvar" class="btn btn-success form-control">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}